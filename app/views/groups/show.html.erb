<div>
  <div>
    <h1>
      Group #<%= @the_group.id %> details
    </h1>

    <div>
      <div>
        <a href="/groups">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_group/<%= @the_group.id %>">
          Delete group
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_group.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_group.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_group.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit group
    </h2>

    <form action="/modify_group/<%= @the_group.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_group.name %>">
      </div>

      <button>
        Update group
      </button>
    </form>
  </div>
</div>

<hr>
